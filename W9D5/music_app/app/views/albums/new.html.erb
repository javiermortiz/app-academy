<h1>Add a new album</h1>

<form action="<%= albums_url%>" method="POST">
    <%= form_auth %>
    <label for="album-title">Title</label>
    <input type="text" id="album-title" name="album[title]">

    <label for="album-year">Year</label>
    <input type="number" id="album-year" name="album[year]">

    <label for="album-live_album">Type of album</label>
    <input type="radio" id="album-live_album" name="">

    <input type="submit" value="Submit">
</form>